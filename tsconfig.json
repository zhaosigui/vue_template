{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true, 
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "/", 
    "paths": {
      "@/*": [ "src/*" ], "@api/*": [ "src/api/*" ],"@assets/*": [ "src/assets/*" ],"@components/*": [ "src/components/*" ],
      "@plugins/*": ["src/plugins/*" ], "@router/*": [ "src/router/*" ],"@store/*": [ "src/store/*" ],
      "@utils/*": [ "src/utils/*" ],"@views/*": [ "src/views/*" ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}